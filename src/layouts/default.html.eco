<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">

  <link rel="dns-prefetch" href="//fonts.googleapis.com">
  <link rel="dns-prefetch" href="//www.google-analytics.com">

  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title><%= @getPageTitle() %></title>

  <meta name="description" content="<%= @getMetaDescription() %>">
  <meta name="keywords" content="<%= @getMetaKeywords() %>">

  <link href="/css/style.css" media="screen, projection" rel="stylesheet" type="text/css">
  <link href="/css/font.css" media="screen, projection" rel="stylesheet" type="text/css">
  <%- @getBlock('styles').toHTML() %>

  <link rel="shortcut icon" href="/favicon.ico">
</head>

<body class="<%= @getBodyClass() %>">
  <header id="top" role="banner">
    <div class="row">
      <div class="large-8 large-centered columns">
        <i class="icon star"></i>
        <h1 class="home--main-heading text-center">
          <a href="/">Erin O'Donnell</a>
        </h1>
        <i class="icon heart right"></i>
      </div>
    </div>

    <% if @getBodyClass() != "home": %>
    <div class="row">
      <div class="large-12 large-centered columns">
        <nav>
          <ul class="inline-list the-nav">
            <li>
              <a class="<%= @isActiveNav('fabrication') %> header--fabrication" href="/fabrication">
                Fabrication
              </a>
            </li>
            <li>
              <a class="<%= @isActiveNav('puppets-and-masks') %> header--puppets-masks" href="/puppets-and-masks">
                Puppets and Masks
              </a>
            </li>
            <li>
              <a class="<%= @isActiveNav('art-direction') %> header--art-direction" href="/art-direction">
                Art Direction
              </a>
            </li>
            <li>
              <a class="<%= @isActiveNav('scenic-painting') %> header--scenic-painting" href="/scenic-painting">
                Scenic Painting
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
    <% end %>
  </header>

  <main id="main" role="main">
    <%- @content %>
  </main>

  <footer id="bottom" role="contentinfo">
    <div class="row">
      <div class="small-12 columns">
        <nav class="left">
          <ul class="inline-list">
            <li>
              Contact
            </li>
            <li>
              <a href="/erin-odonnell-resume.pdf" download="erin-odonnell-resume.pdf">
                Resum√©
              </a>
            </li>
          </ul>
        </nav>

        <p class="right">
          <a href="http://www.etsy.com/shop/erinspapermache" target="_blank">
            Etsy Shop
          </a>
        </p>
      </div>
    </div>
  </footer>

  <%- @getBlock('scripts').toHTML() %>

</body>
</html>
